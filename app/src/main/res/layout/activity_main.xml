<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".MainActivity">

    <RelativeLayout


        android:background="#c8e6c9"
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="60dp">


        <EditText
            android:id="@+id/search_go_input"
            android:layout_width="321dp"
            android:layout_height="39dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="12dp"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="7dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/imageButton_search1"
            android:background="@drawable/search_bar_style"
            android:backgroundTint="#fff"
            android:ems="10"
            android:hint="Search"
            android:inputType="textPersonName"
            android:paddingLeft="10dp" />

        <ImageButton
            android:id="@+id/imageButton_search1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"

            android:layout_alignParentEnd="true"

            android:layout_marginTop="2dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="4dp"
            android:backgroundTint="#fff"
            app:srcCompat="@drawable/ic_search_black_24dp" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/image_google"
        android:layout_width="273dp"
        android:layout_height="187dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="105dp"
        app:srcCompat="@drawable/google_icon" />

    <RelativeLayout
        android:layout_below="@+id/image_google"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:id="@+id/search_layout"
        android:layout_marginTop="0dp"
       android:layout_marginBottom="0dp"
        android:background="@drawable/layout_style"
        android:layout_height="50dp">


        <EditText
            android:id="@+id/search_go_input2"
            android:layout_width="309dp"
            android:layout_height="37dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="13dp"
            android:layout_marginBottom="7dp"
            android:background="@drawable/search_background"
            android:ems="10"
            android:textColorHint="#FFEB8A"
            android:hint="Search.."
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/imageButton_search2"
            android:layout_width="42dp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="9dp"

            android:layout_marginBottom="2dp"
            android:backgroundTint="#fff"
            app:srcCompat="@drawable/ic_search_color_24dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_below="@+id/search_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/web_container_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp" />

    </RelativeLayout>


</RelativeLayout>